        </svg>
    </a>
    <header class="line has-background-primary"></header>

    <section class="profile section">
        <div class="container">
            <div class="columns">
                <div class="column is-two-fifths">
                    <h1 class="title is-size-1">
                        <%= content.profile.name %>
                    </h1>
                    <h2 class="subtitle">
                        <%= content.profile.title %>
                    </h2>
                </div>
                <div class="column is-2">
                    <figure class="image image is-128x128">
                        <img alt="Lucas Arruda's face" class="is-rounded" src="<%= content.profile.photo %>">
                    </figure>
                </div>
                <div class="column has-text-grey-light has-text-right-in-desktop address">
                    <p class="has-text-weight-light">
                        <%= content.profile.city %>
                    </p>
                    <p class="has-text-weight-light">
                        <%= content.profile.phone %>
                    </p>
                    <p class="has-text-weight-light">
                        <%= content.profile.mail %>
                    </p>

                    <div class='socials'>
                      <div class="social-icon">
                          <a href="<%= content.social.twitter.link %>" class="twitter" title="Twitter"><%= content.social.twitter.name %> <svg viewBox="0 0 512 512" height="2rem" width="2rem"><path d="M419.6 168.6c-11.7 5.2-24.2 8.7-37.4 10.2 13.4-8.1 23.8-20.8 28.6-36 -12.6 7.5-26.5 12.9-41.3 15.8 -11.9-12.6-28.8-20.6-47.5-20.6 -42 0-72.9 39.2-63.4 79.9 -54.1-2.7-102.1-28.6-134.2-68 -17 29.2-8.8 67.5 20.1 86.9 -10.7-0.3-20.7-3.3-29.5-8.1 -0.7 30.2 20.9 58.4 52.2 64.6 -9.2 2.5-19.2 3.1-29.4 1.1 8.3 25.9 32.3 44.7 60.8 45.2 -27.4 21.4-61.8 31-96.4 27 28.8 18.5 63 29.2 99.8 29.2 120.8 0 189.1-102.1 185-193.6C399.9 193.1 410.9 181.7 419.6 168.6z"/></svg></a>
                      </div>
                      <div class="social-icon">
                          <a href="<%= content.social.linkedin.link %>" class="linkedin" title="Linkedin"><%= content.social.linkedin.name %> <svg viewBox="0 0 512 512" height="2rem" width="2rem"><path d="M186.4 142.4c0 19-15.3 34.5-34.2 34.5 -18.9 0-34.2-15.4-34.2-34.5 0-19 15.3-34.5 34.2-34.5C171.1 107.9 186.4 123.4 186.4 142.4zM181.4 201.3h-57.8V388.1h57.8V201.3zM273.8 201.3h-55.4V388.1h55.4c0 0 0-69.3 0-98 0-26.3 12.1-41.9 35.2-41.9 21.3 0 31.5 15 31.5 41.9 0 26.9 0 98 0 98h57.5c0 0 0-68.2 0-118.3 0-50-28.3-74.2-68-74.2 -39.6 0-56.3 30.9-56.3 30.9v-25.2H273.8z"/></svg></a>
                      </div>
                      <div class="social-icon">
                          <a href="<%= content.social.github.link %>" class="github" title="Github"><%= content.social.github.name %> <svg viewBox="0 0 512 512" height="2rem" width="2rem"><path d="M256 70.7c-102.6 0-185.9 83.2-185.9 185.9 0 82.1 53.3 151.8 127.1 176.4 9.3 1.7 12.3-4 12.3-8.9V389.4c-51.7 11.3-62.5-21.9-62.5-21.9 -8.4-21.5-20.6-27.2-20.6-27.2 -16.9-11.5 1.3-11.3 1.3-11.3 18.7 1.3 28.5 19.2 28.5 19.2 16.6 28.4 43.5 20.2 54.1 15.4 1.7-12 6.5-20.2 11.8-24.9 -41.3-4.7-84.7-20.6-84.7-91.9 0-20.3 7.3-36.9 19.2-49.9 -1.9-4.7-8.3-23.6 1.8-49.2 0 0 15.6-5 51.1 19.1 14.8-4.1 30.7-6.2 46.5-6.3 15.8 0.1 31.7 2.1 46.6 6.3 35.5-24 51.1-19.1 51.1-19.1 10.1 25.6 3.8 44.5 1.8 49.2 11.9 13 19.1 29.6 19.1 49.9 0 71.4-43.5 87.1-84.9 91.7 6.7 5.8 12.8 17.1 12.8 34.4 0 24.9 0 44.9 0 51 0 4.9 3 10.7 12.4 8.9 73.8-24.6 127-94.3 127-176.4C441.9 153.9 358.6 70.7 256 70.7z"/></svg></a>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="hr"></div>

    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column is-three-fifths">
                    <div class="summary">
                        <div class="title is-size-5 has-text-primary has-text-weight-bold">HOW I CAN HELP YOU</div>
                        <div class="wrapper">
                            <h3><%= content.pitch_first %></h3>

                            <div><%= content.pitch %></div>
                        </div>
                    </div>

                    <div class="experience">
                        <div class="title is-size-5 has-text-primary has-text-weight-bold">EXPERIENCE</div>

                        <% content.experiences.forEach(function(experience){ %>
                            <div class="item">
                                <div class="is-size-5">
                                    <b><%= experience.company %>,</b>
                                    <span class="has-text-weight-semi-bold">
                                        <%= experience.location %> — <i><%= experience.title %></i>
                                    </span>
                                </div>
                                <div class="is-size-7"><%= experience.period %></div>
                                <% if (experience.jobdesc.length > 0) { %>
                                    <ul style="list-style: disc;margin-left: 1em;">
                                        <% experience.jobdesc.forEach(function(job){ %>
                                            <li><%= job %></li>
                                        <% }); %>
                                    </ul>
                                <% } %>
                            </div>
                        <% }); %>

                    </div>

                    <div class="education">
                        <div class="title is-size-5 has-text-primary has-text-weight-bold">EDUCATION</div>

                        <% content.educations.forEach(function(education){ %>
                            <div class="item">
                                <div class="is-size-5">
                                    <b><%= education.name %></b>,
                                    <span class="has-text-weight-semi-bold">
                                        <%= education.city %> — <i><%= education.degree %></i>
                                    </span>
                                </div>
                                <div class="is-size-7"><%= education.period %></div>
                                <div><%= education.faculty %></div>
                            </div>
                        <% }); %>
                    </div>

                </div>
                <div class="column">
                    <div class="summary">
                        <div class="title is-size-5 has-text-primary has-text-weight-bold">SUMMARY</div>
                        <div class="wrapper">
                            <%= content.summary %>
                        </div>
                    </div>

                    <div class="skills">
                        <div class="title is-size-5 has-text-primary has-text-weight-bold">SKILLS</div>
                        <div class="wrapper">
                            <% content.skills.forEach(function(skill){ %>
                                <div class="item">
                                    <div><%= skill.name %></div>
                                    <progress class="progress is-primary is-small" value="<%= skill.progress %>" max="100"><%= skill.progress %>%</progress>
                                </div>
                            <% }); %>
                        </div>
                    </div>

                    <div class="testimonials">
                        <div class="title is-size-5 has-text-primary has-text-weight-bold">REFERENCES</div>
                        <div class="wrapper">
                          <% content.references.forEach(function(ref){ %>
                              <div class="item">
                                  <div class="is-size-5">
                                      <b><%= ref.name %></b>
                                       —
                                      <i><%= ref.company %></i>
                                  </div>
                                  <div class="is-size-7">&ldquo;<i><%= ref.text %></i>&rdquo;</div>
                              </div>
                          <% }); %>
                        </div>
                    </div>

                    <div class="languages">
                        <div class="title is-size-5 has-text-primary has-text-weight-bold">LANGUAGES</div>
                        <div class="wrapper">
                          <!-- Portuguse, English, Spanish -->
                          <%= content.languages.join(', ') %>
                            <!-- <% content.languages.forEach(function(lang){ %>
                                <%= lang %>,
                            <% }); %> -->
                        </div>
                    </div>

                    <div class="projects">
                        <div class="title is-size-5 has-text-primary has-text-weight-bold">PROJECTS</div>
                        <% content.projects.forEach(function(proj){ %>
                            <div class="item">
                                <div class="is-size-5">
                                  <a href="<%= proj.url %>">
                                    <b><%= proj.title %></b>
                                     —
                                    <i><%= proj.company %></i>
                                  </a>
                                </div>
                                <div class="is-size-7"><%= proj.period %></div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="content has-text-centered">
            <a href="light.html">See Light Theme</a>
        </div>
    </footer>

    <footer class="line has-background-primary"></footer>
</body>

</html>
